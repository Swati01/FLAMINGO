<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:layout_weight="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue*"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp" />
    <Spinner

        android:id="@+id/spinner"
        android:background="@drawable/edittextstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView" />
    <TextView
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Area*"
        android:id="@+id/textViewArea"
        android:visibility="visible"
        android:gravity="fill"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/Area"
        android:gravity="left"
        android:layout_weight="7"
        android:visibility="visible"
        android:hint="Enter Area*"
        android:paddingBottom="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edittextstyle"
        android:textSize="20dp"
        android:inputType="text"
        android:layout_alignBottom="@+id/textViewArea"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <TextView android:text="Dignitary Involved, If Yes, Details"
        android:layout_gravity="fill_vertical"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:id="@+id/textView2"
        android:layout_below="@+id/Area"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/dignitary"
        android:layout_weight="80"
        android:gravity="top"
        android:background="@drawable/edittextstyle"
        android:layout_toLeftOf="@+id/external"
        android:layout_toStartOf="@+id/external"
        android:layout_below="@+id/Area" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:text="Photo Upload"
        android:layout_weight="6"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/dignitary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/photo"
        android:paddingTop="20dp"
        android:checked="false"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/dignitary"
        android:layout_alignStart="@+id/dignitary" />


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Detail Of participation Captured   "
        android:textColor="#000000"
        android:layout_weight="6"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/photo"
        android:layout_toRightOf="@+id/dignitary"
        android:layout_toEndOf="@+id/dignitary" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/detail"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:id="@+id/textView5"/>

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/internal"
        android:layout_weight="0.5"
        android:checked="false"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/photo"
        android:layout_alignStart="@+id/photo" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="(For Internal)"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_alignBottom="@+id/internal"
        android:layout_toRightOf="@+id/internal"
        android:layout_toEndOf="@+id/internal"
        android:id="@+id/textView6" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/external"
        android:layout_alignTop="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="(For External)"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/external"
        android:layout_toRightOf="@+id/external"
        android:layout_toEndOf="@+id/external"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/external"
        android:weightSum="10"
        android:background="@color/green"
        android:id="@+id/linearLayout6">

        <TextView
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Is Activity Completed"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/external"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView8" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>

        <CheckBox
            android:layout_height="wrap_content"
            android:layout_width="25dp"
            android:id="@+id/complete"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/internal"
            android:layout_alignStart="@+id/internal" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="(Check if Yes)"
            android:layout_alignBottom="@+id/complete"
            android:layout_toRightOf="@+id/internal"
            android:layout_toEndOf="@+id/internal" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="100"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

        <Button android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:id="@+id/back"
            android:onClick="onbackClick" />
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>


        <Button android:text="Submit"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>


        <Button android:text="Cancel"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/cancel"/>
    </LinearLayout>



</RelativeLayout>

